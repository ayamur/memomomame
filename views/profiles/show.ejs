<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div>
    <img 
      class="profile-avatar"
      src="<%= profile.avatar %>" 
      alt="<%= profile.name %>'s avatar"
    >
  </div>
  <h1>It's <%= isSelf ? "you" : profile.name %>!</h1>
  <% if (isSelf)  {%> 
    <h2>Add a quote!</h2>
    <form action="/profiles/<%= profile._id %>/quotes" method="POST">
      <label>
        Name: 
        <input type="text" name="name" autocomplete="off">
      </label>
      <label>
        Location: 
        <input type="number" name="location" autocomplete="off">
      </label>
      <label>
        Author: 
        <input type="text" name="author" autocomplete="off">
      </label>
      <button type="submit">Add ğŸ±</button>
    </form>
  <% } %>
  <% if (profile.quotes.length)  {%>
    <h2>
      <%= isSelf ? "You have" : `${profile.name} has` %> quotes! Here they are!
    </h2>
    <% profile.quotes.forEach(quote => { %>
      <h3>
        <%= getRandomQuote() %> 
        <%= quote.name %> is a <%= quote.location %> year old <%= quote.author %>.
        <% if (isSelf) { %> 
          <form 
            action="/profiles/quotes/<%= quote._id %>?_method=DELETE" 
            method="POST"
            style="display: inline-block;"
          >
            <button type="submit">ğŸ˜¸ Free <%= quote.name %></button>
          </form>
        <% } %>
      </h3>
    <% }) %>
  <% } else { %>
    <h2>
      <%= isSelf ? "You don't" : `${profile.name} doesn't` %> have any quotes.
    </h2> 
  <% } %>
</main>

<%- include('../partials/footer') %>