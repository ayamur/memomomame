<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Edit your message!</h1>
  <form 
    action="/monsters/<%= monster._id %>/messages/<%= message._id %>?_method=PUT"
    method="POST"
  >
    <label>
      Letter: 
      <textarea
        cols="30"
        rows="5" 
        type="text"
        name="content" 
        autocomplete="off"
      ><%= message.letter %></textarea>
    </label>
    <button type="submit">Update Message</button>
  </form>
</section>

