<section>
  <h1>Edit the Message! </h1>
  <form 
    action="/messages/<%= message._id %>?_method=PUT"
    method="POST"
  >
    <label>
      Name: 
      <input 
        type="text"
        name="name" 
        value="<%= message.name %>" 
        autocomplete="off"
      >
    </label>
    <button type="submit">Edit the Message</button>
  </form>
</section>

